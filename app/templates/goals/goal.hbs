<div class="goal-display">
	{{view 'd3-playground' content=this}}
	<div class="dates">
		<p class="left">Created: {{format-date createdAt}}</p>
		<p class="right">Last Edited: {{format-date lastEdited}}</p>
	</div>
</div>


{{#unless hasSteps}}
	 <!-- Only show this toggle button if there are no steps -->
	{{button-toggle isToggled=isCompleted from="fa-square-o" to="fa-check" class="left goal-checkbox"}} 
{{/unless}}
<h2 {{bind-attr class="isCompleted"}}>{{title}}</h2>

<p class="description">{{description}}</p> 
<ul class="goal steps"> 
	{{#each steps itemController="goals.step"}}
		{{partial 'step'}}
	{{/each}}
</ul>

{{outlet}}
